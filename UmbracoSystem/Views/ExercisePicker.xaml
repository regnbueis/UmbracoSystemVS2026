<Page x:Class="UmbracoSystem.Views.ExercisePicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UmbracoSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="ExercisePicker" Background="#f1f0ee">
    <Grid >
        <Image Source="/Views/Images/ExcorciseBanner.png" Width="640" Height="140"  HorizontalAlignment="Center" VerticalAlignment="Top" Stretch="UniformToFill" Margin="10"/>
        <Grid Margin="20,260,34,-511">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="473"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="listbox" Padding="27" Margin="0,0,49,531" ItemsSource="{Binding Tagslist}" SelectedItem="{Binding SelectedTag}" BorderThickness="2" BorderBrush="#FF283A97">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel  Orientation="Horizontal">                            
                        <TextBlock FontSize="20" Padding="0,0,0,10" Text="{Binding TagName}"/>                        
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox Padding="20" Margin="512,0,-14,531" Grid.ColumnSpan="2" ItemsSource="{Binding FilteredExerciseList}" BorderThickness="2" BorderBrush="#FF283A97">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text=""/>
                            <TextBlock Text=" "/>
                            <TextBlock FontSize="20" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>
        <Grid Margin="10,205,-10,-131">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="443*"/>
                <ColumnDefinition Width="252*"/>
                <ColumnDefinition Width="36*"/>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="184*"/>
            </Grid.ColumnDefinitions>
            <Label FontSize="30" FontWeight="Bold" Content="Tryk på den ønskede øvelse" Margin="112,-6,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Grid.ColumnSpan="4"/>
            <Label FontSize="30" FontWeight="Bold" Content="Vælg Muskelgruppe" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,-6,0,0"  />
            <Button x:Name="Test" Grid.Column="4" Content="Button" HorizontalAlignment="Left" Margin="136,21,0,0" VerticalAlignment="Top" Height="22" Width="22" Click="Test_Click"/>
        </Grid>
    </Grid>
</Page>
