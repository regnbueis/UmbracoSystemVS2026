<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UmbracoSystem.Views"
      xmlns:ViewModels="clr-namespace:UmbracoSystem.ViewModels" x:Class="UmbracoSystem.Views.HomePage"
      mc:Ignorable="d" 
                 d:DesignHeight="800" d:DesignWidth="1000"
Title="HomePage" Background="#f1f0ee">
    <Grid>
        <Image Source="/Views/Images/umbraco_wide_logo_blue.png"
   Width="640" Height="140"
   HorizontalAlignment="Center"
   VerticalAlignment="Top"
   Stretch="UniformToFill"
   Margin="10"/>
        <Border BorderBrush="#283a97" BorderThickness="2" Margin="20,176,540,20">
            <ListBox x:Name="lbBoxTopFive" ItemsSource="{Binding Employees}" Margin="-2,132,-2,132">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text=""/>
                            <TextBlock Text=" "/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Border BorderBrush="#283a97" BorderThickness="2" Margin="532,176,20,20">
            <StackPanel>
                <Label Content="Næste event!" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap"
               Text="{Binding NextEvent.Title}"
               FontSize="25" Margin="5"/>
                <TextBlock TextWrapping="Wrap"
               Text="{Binding NextEvent.Date}"
               FontSize="25" Margin="5"/>
                <TextBlock TextWrapping="Wrap"
               Text="{Binding NextEvent.Description}"
               FontSize="25" Margin="5"/>
                <Image Source="{Binding NextEvent.ImageSource}" Height="100" Width="100"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
